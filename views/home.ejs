<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="css/global.css" />
    <link rel="stylesheet" href="css/home.css" />
    <link rel="stylesheet" href="css/partials/navbar.css" />
    <link rel="stylesheet" href="css/partials/menuDropdown.css" />
    <link rel="stylesheet" href="css/partials/messageCard.css" />
    <script src="js/navMenu.js" defer></script>
  </head>
  <body>
    <%- include("partials/navbar.ejs") %>
    <main>
      <div class="container">
        <% if (!locals.user) { %>
          <div class="card-container note">
            <p>You need to <a href="/login">login</a> first to send a message.</p>
          </div>
        <% } else if (!locals.user.membership) { %>
          <div class="card-container note">
            <p>Become a <a href="/member">member</a> to have more perks.</p>
          </div>
        <% } %>
        <div class="messages-container">
          <% messages.forEach((message) => { %>
            <%- include("partials/messageCard.ejs", {message}) %>
          <% }) %>
        </div>
      </div>
    </main>
  </body>
</html>
