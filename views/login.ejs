<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/global.css" />
    <link rel="stylesheet" href="/css/form.css" />
    <link rel="stylesheet" href="/css/partials/navbar.css" />
    <link rel="stylesheet" href="/css/partials/menuDropdown.css" />
    <link rel="stylesheet" href="/css/partials/errors.css" />
    <script src="/js/navMenu.js" defer></script>
  </head>
  <body>
    <%- include("partials/navbar.ejs") %>
    <main>
      <div class="container">
        <h1 class="header-text">Login</h1>
        <%- include("partials/errors.ejs") %>
        <form action="/login" method="post">
          <div class="input-container">
            <label for="username">Username</label>
            <input
              type="text"
              name="username"
              id="username"
              value="<%= typeof userDetails !== 'undefined' ? userDetails.username : '' %>"
              minlength="1"
              maxlength="16"
              placeholder="johnsmith"
              required
            />
          </div>
          <div class="input-container">
            <label for="password">Password</label>
            <input
              type="password"
              name="password"
              id="password"
              minlength="8"
              placeholder="Password"
              required
            />
          </div>
          <button type="submit">Login</button>
        </form>
      </div>
    </main>
  </body>
</html>
